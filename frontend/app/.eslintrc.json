{
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": ["error", "unix"],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"semi": ["error", "always"],
		"key-spacing": [
			"error",
			{
				"afterColon": true
			}
		],
		"comma-spacing": [2, { "before": false, "after": true }]
	},
	"env": {
		"es2021": true,
		"node": true
	}
}
